body.result
  background url("../images/bg-result.png") no-repeat center bottom
  background-size cover
.m_result
  background-size cover
  background url("../images/bg-result.png") no-repeat center bottom
  min-height 540px
  position relative
  overflow hidden
  display none
  .images
    display none
  .result
    display table
    height 100%
    max-width 540px
    margin-left auto
    margin-right auto
    .answers
      color $pink
      font-size 28px
      line-height 1
      padding-bottom 15px
      @media SM
        font-size 32px
      @media MD
        font-size 40px
      @media LG
        font-size 50px
      i
        font-style normal
    .levels
      > div
        display none
        &.is-active
          display block
      .images
        position absolute
        right 0
        top 0
        width 100%
        height 100%
        display block
        @media LG
          max-width 1200px
          left 50%
          margin-left -600px
        img
          position absolute
          display none
          margin-top 60px
          @media MD
            margin-top 175px
        .l0-1
          display block
          left 5%
          top 5%
          width 60px
          @media screen and (min-width: 568px)
            width 100px
          @media SM
            width 150px
        .l0-2
          display block
          right 5%
          top 5%
          width 100px
          @media screen and (min-width: 568px)
            width 140px
            top 2%
          @media SM
            width 252px
        .l0-3
          @media MD
            display block
            width 200px
            top 25%
            left 2%
          @media LG
            width 438px
            left -150px
        .l0-4
          display block
          right -30px
          bottom 100px
          width 100px
          @media SM
            width 314px
            right 50%
            margin-right -470px
            bottom -150px
          @media LG
            bottom -50px
        .l0-5
          display block
          left -10px
          bottom 170px
          width 100px
          @media SM
            width 264px
            bottom -50px
            left 50%
            margin-left -380px
        .l1-1
          display block
          width 100px
          top 5%
          left 5%
          @media SM
            width 223px
        .l1-2
          display block
          left -20px
          bottom -50px
          width 200px
          @media SM
            width 495px
            left 50%
            margin-left -550px
            bottom -150px
            z-index 1
          @media LG
            margin-left -650px
        .l1-3
          @media SM
            display block
            bottom 20px
            width 371px
            left 50%
            margin-left -550px
          @media LG
            margin-left -650px
        .l1-4
          display block
          top -50px
          right 5%
          width 150px
          @media SM
            width 383px
            top -100px
            right 50%
            margin-right -450px
        .l1-5
          @media SM
            display block
            width 238px
            right 50%
            top 50%
            margin-top -100px
            margin-right -500px
          @media LG
            margin-top -15px
            margin-right -600px
        .l1-6
          display block
          right -50px
          bottom 100px
          @media SM
            bottom 25%
            width 145px
            right 50%
            margin-right -350px
        .l1-7
          @media SM
            width 180px
            bottom -80px
            right 50%
            margin-right -500px
            display block
        .l2-1
          display block
          left -70px
          top -60px
          width 200px
          @media SM
            width 328px
        .l2-2
          left 0
          top 50%
          margin-top 20px
          @media LG
            display block
        .l2-3
          display block
          bottom -50px
          left -60px
          width 150px
          @media SM
            width 250px
            bottom 0
            left 50%
            margin-left -400px
        .l2-4
          display block
          right 50%
          margin-right -550px
          bottom -100px
          @media SM
            display block
          @media LG
            margin-right -650px
        .l2-5
          display block
          top 0
          right 0
          width 100px
          @media SM
            width 194px
            right 50px
            top 50px
          @media LG
            top auto
            bottom 500px
        .l3-1
          display none
          @media SM
            display block
            top 50%
            margin-top -10px
        .l3-2
          display block
          width 150px
          left -55px
          @media SM
            width 233px
            top 10px
            left -50px
        .l3-3
          display block
          width 180px
          right -75px
          top -40px
          @media SM
            width 300px
          @media LG
            width 400px
            right 20px
            top -130px
        .l3-4
          display block
          left -100px
          bottom -50px
          width 200px
          @media SM
            width 401px
            left -200px
          @media LG
            left 50%
            margin-left -550px
            bottom -20px
        .l3-5
          @media SM
            display block
            width 100px
            right -50px
            top 350px
          @media LG
            width 115px
            top 400px
      .title,
      .desc,
      .get-gift
        position relative
        z-index 10
      .title
        font-size 24px
        color $green
        line-height 1
        margin-bottom 15px
        text-shadow 1px 1px 3px rgba(0,0,0,.3)
        @media SM
          font-size 32px
          margin-bottom 30px
        @media MD
          font-size 40px
        @media screen and (min-width: 992px) and (max-height: 600px)
          font-size 32px
        @media LG
          font-size 50px
        @media screen and (min-width: 1200px) and (max-height: 670px)
          font-size 40px
        img
          max-width 30%
          @media LG
            max-width 40%
      .desc
        color #fff
        font-size 16px
        line-height 18px
        font-family Arial, 'Pribambas', sans-serif
        padding-left 15px
        padding-right 15px
        margin-bottom 15px
        text-shadow 1px 1px 3px rgba(0,0,0,.3)
        @media screen and (max-height: 600px)
          margin-bottom 0
          font-size 14px
          line-height 16px
        @media screen and (max-height: 520px) and (min-width: 480px)
          margin-bottom 15px
        @media screen and (min-width: 1200px) and (max-height: 630px)
          margin-bottom 0
      .get-gift
        color #fff
        padding 15px
        .frame
          background #26262a
          padding 15px
          @media screen and (min-width: 568px) and (min-height: 470px)
            padding 20px
          @media SM
            padding 30px
          @media screen and (min-width: 992px) and (max-height: 600px)
            padding 20px
          @media screen and (min-width: 1200px) and (max-height: 640px)
            padding 20px
          p
            font-family Arial, 'Pribambas', sans-serif
            margin 0
            font-size 14px
            @media SM
              font-size 19px
          .action
            margin-top 15px
            a
              color $green
              border 2px solid $green
              border-radius $radius
              font-size 20px
              line-height 1
              display inline-block
              vertical-align middle
              padding 5px 10px
              anim()
              @media SM
                font-size 24px
              @media MD
                font-size 30px
                padding 10px 15px
              &:hover
                background $green
                color $black
    .bottom
      position relative
      z-index 1
      text-align center
      > .share,
      > .retry
        display inline-block
        vertical-align middle
      > .share
        > .label,
        > .soc-buttons
          display inline-block
          vertical-align middle
          line-height 24px
        > .label
          color #fff
      > .retry
        padding-left 15px
        a
          anim()
          color #fff
          font-size 16px
          line-height 24px
          &:hover
            color $green
            .icon
              img
                opacity 0
                & + img
                  opacity 1
          span,
          .icon
            display inline-block
            vertical-align middle
          .icon
            position relative
            width 24px
            height 24px
            img
              anim()
              display block
              width 100%
              height 100%
              & + img
                position absolute
                left 0
                top 0
                width 100%
                height 100%
                opacity 0

