.btn
  sn()
  display inline-block
  vertical-align middle
  background #e0e0e0
  border-radius 2px
  font-size 14px
  font-weight 500
  min-width 88px
  margin 6px 5px 6px 0
  padding 10px 16px
  text-transform uppercase
  text-decoration none
  will-change box-shadow
  box-shadow 0 1px 5px rgba(0,0,0,.2), 0 2px 2px rgba(0,0,0,.14), 0 3px 1px -2px rgba(0,0,0,.12)
  color #424242
  border none
  &:after
    anim()
    border-radius inherit
    bottom 0
    content ''
    left 0
    position absolute
    top 0
    right 0
    z-index 0
  &:hover
    &:after
      background-color rgba(0,0,0,.12)
  &[disabled]
    opacity .5
    &:hover
      &:after
        background none


// Ripples effect
.ripple
  anim()
  position relative
  overflow hidden
  cursor pointer
  .ink
    display block
    position absolute
    background rgba(255, 255, 255, 0.3)
    border-radius 100%
    transform scale(0)
  .animate
    animation ripple 0.65s linear
  @keyframes ripple
    100%
      opacity 0
      transform scale(2.5)


